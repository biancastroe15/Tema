% 4. Semnal sinusoidal redresat mono alternan?? 
% Perioada semnalului sinusoidal ini?ial (neredresat) 3 s. 
% Amplitudine: 0.8

rez1 = -100:2*10^-3:100;
rez2 = -100:2*10^-2:100;
rez3 = -100:2*10^-1:100;

T = 3;
A = 0.8;
w = 2*pi/T;

nr = 1;
for i = rez1
    if (A*cos(w*i) > 0)
        y1(nr) = A*cos(w*i);
    else
        y1(nr) = 0;
    end
    nr = nr+1;
end

nr = 1;
for i = rez2
    if (A*cos(w*i) > 0)
        y2(nr) = A*cos(w*i);
    else
        y2(nr) = 0;
    end
    nr = nr+1;
end

nr = 1;
for i = rez3
    if (A*cos(w*i) > 0)
        y3(nr) = A*cos(w*i);
    else
        y3(nr) = 0;
    end
    nr = nr+1;
end

figure(7)
subplot(3, 1, 1)
plot(rez1, y1), grid on, title('Rezolutie 2ms')
axis([-3 3 -1 1])
subplot(3, 1, 2)
plot(rez2, y2), grid on, title('Rezolutie 20ms')
axis([-3 3 -1  1])
subplot(3, 1, 3)
plot(rez3, y3), grid on, title('Rezolutie 200ms')
axis([-3 3 -1 1])



% Semnal sinusoidal redresat dubl? alternan?? 
% Perioada semnalului sinusoidal neredresat: 4 s. 
% Amplitudine: 1.5.

rez1 = -100:2*10^-3:100;
rez2 = -100:2*10^-2:100;
rez3 = -100:2*10^-1:100;

T = 4;
A = 1.5;
w = 2*pi/T;

nr = 1;
for i = rez1
    if (A*cos(w*i) > 0)
        y1(nr) = A*cos(w*i);
    else
        y1(nr) = -A*cos(w*i);
    end
    nr = nr+1;
end

nr = 1;
for i = rez2
    if (A*cos(w*i) > 0)
        y2(nr) = A*cos(w*i);
    else
        y2(nr) = -A*cos(w*i);
    end
    nr = nr+1;
end

nr = 1;
for i = rez3
    if (A*cos(w*i) > 0)
        y3(nr) = A*cos(w*i);
    else
        y3(nr) = -A*cos(w*i);
    end
    nr = nr+1;
end

figure(8)
subplot(3, 1, 1)
plot(rez1, y1), grid on, title('Rezolutie 2ms')
axis([-6 6 -3 3])
subplot(3, 1, 2)
plot(rez2, y2), grid on, title('Rezolutie 20ms')
axis([-6 6 -3  3])
subplot(3, 1, 3)
plot(rez3, y3), grid on, title('Rezolutie 200ms')
axis([-6 6 -3 3])
